{
    "compilerOptions": {
        // diretorio onde o compilador ts vai jogar os arquivos convertidos em js
        "outDir": "app/dist/js",
        // Qual versao do ES o compilador do ts vai converter os arquivos
        "target": "ES6",
        // Não compilar se houver erro
        "noEmitOnError": true,
        // Adicinado tipagem a linguagem
        "noImplicitAny": true,
        // Comentarios não são passados para os arquivos js
        "removeComments": true,
        // Obrigando a lidar com propriedades que a situação pode ser nula
        "strictNullChecks": true
    },
    // diretorio onde estao os arquivos ts
    "include": ["app/src/**/*"]
}